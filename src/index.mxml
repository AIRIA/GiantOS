<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" pageTitle="CC视频直播课堂" 
			   xmlns:mx="library://ns.adobe.com/flex/mx" minWidth="955" minHeight="600" 
			   xmlns:gaint="com.giant.components.*" 
			   creationComplete="createComplete(event)">
	<fx:Script source="com/giant/scripts/student/student.as" />
	<fx:Style source="com/giant/styles/main.css"/>
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	<s:VGroup gap="1" width="100%" height="100%">
		<s:HGroup width="100%" height="100%">
			<s:VGroup width="400" height="100%">
				<gaint:SimplePanel width="100%" height="300" title="直播视频"
								   titleIcon="assets/icons/video.png">
					<s:Rect width="100%" height="100%">
						<s:fill>
							<s:SolidColor color="0x000000"/>
						</s:fill>
					</s:Rect>
					<s:VideoDisplay muted="true" loop="true" width="100%" height="100%" source="Link_s Shadow (The Legend of Zelda).mp4"/>
				</gaint:SimplePanel>
				<gaint:ChatPanel btnLabel="发言" socketClient="{client}" routeDic="{route}" id="chatPanel" titleIcon="assets/icons/chat.png" width="100%" height="100%"/>
			</s:VGroup>
			<gaint:PPTPanel id="pptPanel" width="100%" height="100%" titleIcon="assets/icons/ppt.png"/>
		</s:HGroup>
		<s:Group width="100%" height="30">
			
			<s:Rect width="100%" height="100%">
				<s:fill>
					<s:SolidColor color="0xCCCCCC"/>
				</s:fill>
			</s:Rect>
			<s:Rect top="0.5" width="100%" height="0.5">
				<s:stroke>
					<s:SolidColorStroke color="0xBBBBBB"/>
				</s:stroke>
			</s:Rect>
			<s:HGroup verticalAlign="middle" width="100%" height="100%" paddingRight="15">
				<s:Label id="status" left="5" verticalCenter="0"/>
				<s:Spacer width="100%"/>
				<!--<s:Image toolTip="离线状态" source="assets/icons/offline.png"/>-->
			</s:HGroup>
		</s:Group>
	</s:VGroup>
	<gaint:LoginLayer id="loginLayer"/>
</s:Application>
