<?xml version="1.0" encoding="utf-8"?>
<components:SimplePanel xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 width="100%" height="180" cutIcon="assets/icons/down.png"
		 iconTip="隐藏" title="PPT列表" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" 
		 xmlns:components="com.giant.components.*">
	<fx:Script>
		<![CDATA[
			import com.giant.managers.ShareManager;
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	<s:Scroller width="100%" height="100%">
		<s:HGroup width="100%" height="100%" verticalAlign="middle">
			<mx:HBox paddingTop="3" paddingBottom="3" paddingLeft="3" paddingRight="3"  width="100%" height="100%">
				<mx:Repeater id="pptRep" dataProvider="{ShareManager.pptList}">
					<components:PPTItem pageId="{pptRep.currentIndex}" itemName="{pptRep.currentItem.name}" itemImage="{pptRep.currentItem.source}"/>
				</mx:Repeater>
			</mx:HBox>
		</s:HGroup>
	</s:Scroller>
</components:SimplePanel>
