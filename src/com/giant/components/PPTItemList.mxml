<?xml version="1.0" encoding="utf-8"?>
<components:SimplePanel xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 width="100%" height="100%" cutIcon="assets/icons/down.png"
		 iconTip="隐藏" title="PPT列表" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" 
		 xmlns:components="com.giant.components.*">
	<fx:Script>
		<![CDATA[
			[Inspectable(arrayType="string",enumeration="rows,columns",defaultValue="rows")]
			[Bindable]
			public var orientation:String;
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	<s:Rect width="100%" height="100%" >
		<s:fill>
			<s:SolidColor color="0xE5E5E5"/>
		</s:fill>
	</s:Rect>
	<s:Scroller width="100%" height="100%">
		<s:TileGroup horizontalAlign="center" paddingTop="15" paddingBottom="15" paddingLeft="20" orientation="{orientation}" columnWidth="150" width="100%" height="100%">
			<components:PPTItem itemName="name1" itemImage="ppts/1.jpg"/>
			<components:PPTItem itemName="name2" itemImage="ppts/2.jpg"/>
			<components:PPTItem itemName="name3" itemImage="ppts/3.jpg"/>
			<components:PPTItem itemName="name4" itemImage="ppts/4.jpg"/>
			<components:PPTItem itemName="name5" itemImage="ppts/5.jpg"/>
			<components:PPTItem itemName="name6" itemImage="ppts/6.jpg"/>
			<components:PPTItem itemName="name7" itemImage="ppts/7.jpg"/>
		</s:TileGroup>
	</s:Scroller>
</components:SimplePanel>
